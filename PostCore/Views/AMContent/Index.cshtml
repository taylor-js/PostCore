@section scripts{
    <script>
        $(document).ready(function () {
            $('#amcontent-index-table').DataTable({
                "ajax": {
                    "url": "/AMContent/GetAllAMContentData",
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": function (json) {
                        console.log(json);
                        return json.data.$values;
                    }
                },
                "columns": [
                    {
                        "data": "Uniqueassetidcont",
                        "render": function (data, type, row) {
                            var detailsUrl = "/AssetMgmt/AssetDetails/" + data;
                            return `<a href="${detailsUrl}" class="btn btn-outline-secondary">Details</a>`;
                        }
                    },
                    { "data": "Assetcontentnumber" },
                    { "data": "Assetcontentdescription" },
                    { "data": "Assetcontentversion" },
                    { "data": "Assetcontentdateassigned" },
                ],
                scrollY: '500px',
                scrollCollapse: true,
                paging: true
            });
        });
    </script>
}