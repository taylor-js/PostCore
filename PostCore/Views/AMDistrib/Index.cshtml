@section scripts {
    <script>
        $(document).ready(function () {
            $('#amdistrib-index-table').DataTable({
                "ajax": {
                    "url": "/AMDistrib/GetAllAMDistribData",
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": function (json) {
                        console.log(json);
                        return json.data.$values;
                    }
                },
                "columns": [
                    {
                        "data": "Uniqueassetiddistr",
                        "render": function (data, type, row) {
                            var detailsUrl = "/AssetMgmt/AssetDetails/" + data;
                            return `<a href="${detailsUrl}" class="btn btn-outline-secondary">Details</a>`;
                        }
                    },
                    { "data": "Assetdistributionowner" },
                    { "data": "Assetdistributionlocation" },
                    { "data": "Assetdistributionquantity" },
                    { "data": "Assetdistributiondateassigned" },
                ],
                scrollY: '500px',
                scrollCollapse: true,
                paging: true
            });
        });
    </script>
