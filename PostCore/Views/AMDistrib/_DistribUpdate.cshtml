@model PostCore.Models.Amdistrib
@* //asp-items="ViewBag.UniqueAssetIdcont" (for dropdowns - goes in input) *@
<form id="updateDistribForm" asp-controller="AmDistrib" asp-action="_DistribUpdate" asp-route-id='@Model.Uniqueassetiddistr' asp-route-d_id='@Model.Uniquedistributionid' onsubmit="return jQueryAjaxPostUpdateDistrib(this);" data-ajax="true" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <partial name="_ValidationScriptsPartial" />
        <input type="hidden" asp-for="Uniquedistributionid" />
        <input type="hidden" asp-for="Uniqueassetiddistr" />

        <div class="form-group">
            <label asp-for="Assetdistributionowner" class="control-label font-weight-bold"></label>
            <input asp-for="Assetdistributionowner" class="form-control" placeholder="Distrib Number" />
            <span asp-validation-for="Assetdistributionowner" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Assetdistributionlocation" class="control-label font-weight-bold"></label>
            <input asp-for="Assetdistributionlocation" class="form-control" placeholder="Distrib Description" />
            <span asp-validation-for="Assetdistributionlocation" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Assetdistributionquantity" class="control-label font-weight-bold"></label>
            <input asp-for="Assetdistributionquantity" class="form-control" placeholder="Distrib Version" />
            <span asp-validation-for="Assetdistributionquantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Assetdistributiondateassigned" class="control-label font-weight-bold"></label>
            <input type="text" asp-for="Assetdistributiondateassigned" value="@Model.Assetdistributiondateassigned.ToString("yyyy-MM-dd")" class="form-control datepicker" type="date" placeholder="Distrib Date Assigned" />
            <span asp-validation-for="Assetdistributiondateassigned" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Cancel</button>
        </div>
    </div>
</form>